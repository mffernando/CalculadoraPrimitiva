<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imgCalc"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_gravity="center"
        android:src="@drawable/calc"
        />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CALCULADORA PRIMITIVA"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        />

    <!-- Adicao -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/edtAdicao1"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:inputType="number"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/txtAdicao"
            android:text="+"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/edtAdicao2"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:inputType="number"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/txtIgualAdicao"
            android:text="="
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/txtResultadoAdicao"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            />

    </LinearLayout>

    <!-- Subtracao -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/edtSubtracao1"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:inputType="number"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/txtSubtracao"
            android:text="-"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/edtSubtracao2"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:inputType="number"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/txtEqualSubtracao"
            android:text="="
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/txtResultadoSubtracao"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            />

    </LinearLayout>

    <!-- Divisao -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/edtDivisao1"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:inputType="number"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/txtDivisao"
            android:text="/"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/edtDivisao2"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:inputType="number"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/txtEqualDivisao"
            android:text="="
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/txtResultadoDivisao"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:inputType="number"
            />

    </LinearLayout>

    <!-- Multiplicacao -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/edtMultiplicacao1"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:inputType="number"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/txtMultiplicacao"
            android:text="*"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/edtMultiplicacao2"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            android:inputType="number"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/txtEqualMultiplicacao"
            android:text="="
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/txtResultadoMultiplicacao"
            android:text="0"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="20sp"
            />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:id="@+id/btnCalcular"
        android:text="Calcular"
        />

</LinearLayout>